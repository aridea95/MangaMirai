<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anime by Team 5</title>
    <style>
        body {
            font-family: "Avenir", sans-serif;
        }
        table{
            width: 500px;
        }
        th,td {
            padding : 10px;
        }
        thead {
            background: lightblue;
        }
    </style>
</head>
<body>
    <h1>User List</h1>
   
    <a href="/">Home</a>
    <a href="/users">Users</a>
    <a href="/users/add">Add User</a>
    
    <h2>Ini halaman USER LIST</h2>
  
    <table border="1" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>                    
                    <td><%= user.age %></td>
                    <td><%= user.gender %></td>
                    <td>
                        <a href="users/delete/ <%= user.id %>">Delete</a>
                        <a href="users/edit/ <%= user.id %>">Edit</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
